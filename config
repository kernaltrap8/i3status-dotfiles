general {
	output_format = "i3bar"
	colors = true
	interval = 1
}

order += "ethernet enp4s0"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "cpu_usage"
order += "read_file GPU_PERCENT"
order += "memory"
order += "time"

read_file MUSIC {
	format = "%content"
	path = "~/.config/i3status/media_status"
}
ethernet enp4s0 {
	format_up = "E: %ip (%speed)"
	format_down = "E: down :("
}
cpu_temperature 0 {
	format = "C: %degrees°C"
	path = "/sys/class/hwmon/hwmon0/temp1_input"
}
cpu_temperature 1 {
	format = "G: %degrees°C"
	path = "/sys/class/hwmon/hwmon2/temp1_input"
}
cpu_usage {
	format = "C: %usage"
	max_threshold = "85"
}
memory {
	format = "M: %used / %total (%available)"
	unit = "auto"
}
time {
	#format = "%m-%d-%Y %I:%M:%S %p"
	format = "%a %m-%d-%Y %I:%M:%S %p"
}
